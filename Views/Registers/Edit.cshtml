@model Fitness.Models.Register

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutInnerPages.cshtml";
}

<h1>Edit</h1>

<h4>Register</h4>
<hr />
<div class="container mt-5">
    <h2 class="mb-4">Edit Profile</h2>
    <div class="card">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="GenderID" class="form-label">Gender</label>
                            <select asp-for="GenderID" class="form-control" asp-items="ViewBag.GenderID"></select>
                            <span asp-validation-for="GenderID" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CurrentWeight" class="form-label">Current Weight</label>
                            <input asp-for="CurrentWeight" class="form-control" />
                            <span asp-validation-for="CurrentWeight" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DesiredWeight" class="form-label">Desired Weight</label>
                            <input asp-for="DesiredWeight" class="form-control" />
                            <span asp-validation-for="DesiredWeight" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Height" class="form-label">Height</label>
                            <input asp-for="Height" class="form-control" />
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="BMI" class="form-label">BMI</label>
                            <input asp-for="BMI" class="form-control" />
                            <span asp-validation-for="BMI" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="HomeAddress" class="form-label">Home Address</label>
                            <input asp-for="HomeAddress" class="form-control" />
                            <span asp-validation-for="HomeAddress" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="City" class="form-label">City</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">Code</label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Country" class="form-label">Country</label>
                            <select asp-for="Country" class="form-control" asp-items="ViewBag.Country"></select>
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Phone</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Plan" class="form-label">Plan</label>
                            <select asp-for="Plan" class="form-control" asp-items="ViewBag.Plan"></select>
                            <span asp-validation-for="Plan" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Agree" id="agree-checkbox" />
                                <label class="form-check-label" for="agree-checkbox">@Html.DisplayNameFor(model => model.Agree)</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary btn-block">Save</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

