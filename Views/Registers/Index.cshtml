@model IEnumerable<Fitness.Models.Register>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutInnerPages.cshtml";
}

<h1>Index</h1>


<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center my-4">Index</h1>
            <div class="d-flex justify-content-end mb-3">
                <a asp-action="Create" class="btn btn-success">Create New</a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CurrentWeight)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DesiredWeight)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Height)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BMI)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HomeAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.City)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Agree)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Gender)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CountryNavigation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PlanNavigation)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CurrentWeight)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DesiredWeight)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Height)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BMI)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HomeAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Agree)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gender.description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CountryNavigation.countru_id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PlanNavigation.name_plan)
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-white">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                                            Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>