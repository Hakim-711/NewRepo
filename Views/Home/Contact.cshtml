@model Contact
@{
    ViewData["Title"] = "Contact";
    Layout = "/Views/Shared/_LayoutInnerPages.cshtml";

}

<!-- ***** Contact Us Area Starts ***** -->
    <section class="section" id="contact-us">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div id="map">
                      <iframe src="https://maps.google.com/maps?q=Av.+L%C3%BAcio+Costa,+Rio+de+Janeiro+-+RJ,+Brazil&t=&z=13&ie=UTF8&iwloc=&output=embed" width="100%" height="600px" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="contact-form">
                    <@using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-6 col-sm-12">            
                                <fieldset>
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Your Name*", required = "required" })
                                    <span asp-validation-for="Name" class="text-danger"></span>               
                                </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", pattern = "[^ @]*@[^ @]*", placeholder = "Your Email*", required = "required" })
                                    <span asp-validation-for="Email" class="text-danger"></span>
                               </fieldset>
                           </div>
                           <div class="col-md-12 col-sm-12">
                               <fieldset>
                                    @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", placeholder = "Subject" })
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">      
                                <fieldset>
                                    @Html.TextAreaFor(model => model.Message, 6, 1, new { @class = "form-control", placeholder = "Message", required = "required" })
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </fieldset>
                            </div>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="main-button">Send Message</button>
                                </fieldset>
                            </div>
                        </div>
                    }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Contact Us Area Ends ***** -->